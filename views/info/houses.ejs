<% layout('/layout/boiler') -%>
    <div class="col-md-6 my-3 mx-5">
    </div>
    <% for(var it=0;it<houses.length;it++){ %>
        <% const house = houses[it]; %> 
        <div class="col-md-6 mt-5 mx-5">
            <div class="card" style="width: 36rem;">
                <!-- <img class="card-img-top" src="..." alt="Card image cap"> -->
                <div class="card-body">
                    <div id="house_<%=it%>" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                        <% for(let i=0;i<house.pics.length;i++){ %>
                            <div class="carousel-item <%= i==0?'active':'' %>">
                                <img height="400" width="600" src="<%= house.pics[i].url %>" alt="First slide">
                              </div>
                        <% } %>  
                        </div>
                        <%if(house.pics.length>1){%>
                                                    <a class="carousel-control-prev" href="#house_<%=it%>" role="button" data-slide="prev">
                          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                          <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#house_<%=it%>" role="button" data-slide="next">
                          <span class="carousel-control-next-icon" aria-hidden="true"></span>
                          <span class="sr-only">Next</span>
                        </a>
                        <% } %> 
                    </div>
                    <h5 class="card-title">Category:<%=house.categ%>
                    </h5>
                    <p class="card-text">Price: â‚¹<%=house.price%>
                    </p>
                    <p class="card-text">Description:<%=house.desc%>
                    </p>
                    <p class="card-text">Location:<%=house.location%>
                    </p>
                    <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
                </div>
            </div>
        </div>
        <% } %>